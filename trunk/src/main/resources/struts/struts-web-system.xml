<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	
	<form-beans>
		<form-bean name="form.system.menu" type="org.shengrui.oa.model.system.ModelAppMenu"></form-bean>
	</form-beans>
	
	<action-mappings>
		
		<!-- 系统设置 -->
		<action path="/app/system/menu"
				name="form.system.menu"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="page.sys.setting.menu.list" path="page.sys.setting.menu.list" />
			
			<forward name="data.sys.setting.menu.tree" path="data.sys.setting.menu.tree" />
			<forward name="data.sys.setting.menu.func" path="data.sys.setting.menu.func" />
			
			<forward name="dialog.sys.setting.menu.item" path="dialog.sys.setting.menu.item" />
			<forward name="dialog.sys.setting.menu.func" path="dialog.sys.setting.menu.func" />
		
		</action>
		
	</action-mappings>

</struts-config>
