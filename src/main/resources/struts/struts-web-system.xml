<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	
	<form-beans>
		<form-bean name="form.system.menu.item" type="org.shengrui.oa.model.system.ModelAppMenu"></form-bean>
		<form-bean name="form.system.menu.func" type="org.shengrui.oa.model.system.ModelAppFunction"></form-bean>
	</form-beans>
	
	<global-forwards> 
		<forward name="data.sys.setting.menu.tree" path="data.sys.setting.menu.tree" />
		<forward name="data.sys.setting.menu.func" path="data.sys.setting.menu.func" />
	</global-forwards>
	
	<action-mappings>
		
		<!-- 菜单项设置 -->
		<action path="/app/system/menu"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="page.sys.setting.menu.index" path="page.sys.setting.menu.index" />
		</action>
		
		<!-- 菜单项设置 -->
		<action path="/app/system/menu/item"
				name="form.system.menu.item"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="dialog.sys.setting.menu.item" path="dialog.sys.setting.menu.item" />
		</action>
		
		<!-- 菜单功能项设置 -->
		<action path="/app/system/menu/func"
				name="form.system.menu.func"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="dialog.sys.setting.menu.func" path="dialog.sys.setting.menu.func" />
		</action>
		
	</action-mappings>

</struts-config>
