<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	
	<!-- 定义Action的return节点和具体去向，跳转的URL对应到titles里面，那里给出具体的jsp页面地址-->
	
	<form-beans>
		<form-bean name="form.work.arrange" type="org.shengrui.oa.model.admin.ModelAdminWorkArrange"></form-bean>
		<form-bean name="form.work.base.content" type="org.shengrui.oa.model.system.ModelBaseWorkContent"></form-bean>
		<form-bean name="form.work.base.time" type="org.shengrui.oa.model.system.ModelBaseWorkTime"></form-bean>
		<form-bean name="form.work.template" type="org.shengrui.oa.model.system.ModelWorkTemplate"></form-bean>
	</form-beans>
	
	<global-forwards> 
		<forward name="data.sys.setting.flow.type.tree" path="data.sys.setting.flow.type.tree" />
		
	</global-forwards>
	
	<action-mappings>
		
		<!-- 工作模板设置 -->
		<action path="/app/system/work/template"
				name="form.work.template"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="page.sys.setting.work.template.index" path="page.sys.setting.work.template.index" />
         <forward name="dialog.sys.setting.work.template.addpage" path="dialog.sys.setting.work.template.addpage" />
         <forward name="page.sys.setting.work.template.staff" path="page.sys.setting.work.template.staff" />
		</action>
		
		<!-- 工作基础设置 -->
		<action path="/app/system/work/base"
		      name="form.work.base.content"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="page.sys.setting.work.base.index" path="page.sys.setting.work.base.index" />
			<forward name="data.sys.setting.work.base.content" path="data.sys.setting.work.base.content" />
			<forward name="dialog.sys.setting.work.content.page" path="dialog.sys.setting.work.content.page" />
			<forward name="dialog.sys.setting.work.content.addpage" path="dialog.sys.setting.work.content.addpage" />
		</action>
		
		
		<!-- 工作基础设置 -->
		<action path="/app/system/work/base/time"
		      name="form.work.base.time"
				scope="request"
				parameter="action"
				type="org.springframework.web.struts.DelegatingActionProxy">
			<forward name="page.sys.setting.work.base.time.index" path="page.sys.setting.work.base.time.index" />
			<forward name="data.sys.setting.work.base.time" path="data.sys.setting.work.base.time" />
			<forward name="dialog.sys.setting.work.time.page" path="dialog.sys.setting.work.time.page" />
			<forward name="dialog.sys.setting.work.time.addpage" path="dialog.sys.setting.work.time.addpage" />
		</action>
	</action-mappings>

</struts-config>
