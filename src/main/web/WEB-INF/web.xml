<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	version="2.5" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_4.xsd">
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>webAppRoot</param-value>
	</context-param>
	
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>600000</param-value>
	</context-param>
	
	<!-- log4j context configuration -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>
			classpath:config/log4j.properties
		</param-value>
	</context-param>
	
	<!-- log4j context listener -->
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	
	<!-- spring context configuration -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:spring/**/applicationContext*.xml
		</param-value>
	</context-param>
	
	<!-- spring context listener -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<!-- encoding filter -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- site context listener -->
	<listener>
		<listener-class>com.lzcp.web.servlet.ServletContextLoaderListener</listener-class>
	</listener>
	
	<!-- Open Session View -->
	<filter>
		<filter-name>openSessionInViewFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>openSessionInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Security Control -->
	<filter>
		<filter-name>securityFilterChain</filter-name>
		<filter-class>com.lzcp.components.security.UserAuthenticationFilter</filter-class>
		<init-param>
			<param-name>pageError</param-name>
			<param-value>/error</param-value>
		</init-param>
		<init-param>
			<param-name>pageLogin</param-name>
			<param-value>/account/login</param-value>
		</init-param>
		<init-param>
			<param-name>pageAccessDenied</param-name>
			<param-value>/accessDenied.jsp</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>securityFilterChain</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	
	<!-- UrlRewrite configuration -->
	<filter>
		<filter-name>rewriteFilter</filter-name>
		<filter-class>
			org.tuckey.web.filters.urlrewrite.UrlRewriteFilter
		</filter-class>
		<init-param>
			<param-name>confPath</param-name>
			<param-value>/WEB-INF/classes/urlrw/urlrewrite*.xml</param-value>
		</init-param>
		<init-param>
			<param-name>logLevel</param-name> 
			<param-value>DEBUG</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>rewriteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- struts configuration -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>	
			<param-name>config</param-name>
			<param-value>
				/WEB-INF/classes/struts/struts.xml,
				/WEB-INF/classes/struts/struts-web-account.xml,
				/WEB-INF/classes/struts/struts-web-admin.xml,
				/WEB-INF/classes/struts/struts-web-album.xml,
				/WEB-INF/classes/struts/struts-web-artworks.xml,
				/WEB-INF/classes/struts/struts-web-business.xml,
				/WEB-INF/classes/struts/struts-web-category.xml,
				/WEB-INF/classes/struts/struts-web-comments.xml,
				/WEB-INF/classes/struts/struts-web-contact.xml,
				/WEB-INF/classes/struts/struts-web-culture.xml,
				/WEB-INF/classes/struts/struts-web-entry.xml,
				/WEB-INF/classes/struts/struts-web-entry-news.xml,
				/WEB-INF/classes/struts/struts-web-home.xml,
				/WEB-INF/classes/struts/struts-web-job.xml,
				/WEB-INF/classes/struts/struts-web-jobapplicant.xml,
				/WEB-INF/classes/struts/struts-web-links.xml,
				/WEB-INF/classes/struts/struts-web-master.xml,
				/WEB-INF/classes/struts/struts-web-meta.xml,
				/WEB-INF/classes/struts/struts-web-park.xml,
				/WEB-INF/classes/struts/struts-web-search.xml,
				/WEB-INF/classes/struts/struts-web-service.xml,
				/WEB-INF/classes/struts/struts-web-settings.xml,
				/WEB-INF/classes/struts/struts-web-upload.xml
			</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>3</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>3</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<!-- Discuz API -->
	<servlet>
		<servlet-name>api</servlet-name>
		<servlet-class>com.fivestars.interfaces.bbs.api.UC</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>api</servlet-name>
		<url-pattern>/api/uc.php</url-pattern>
	</servlet-mapping>
	
	<!-- Tag lib -->
	<jsp-config>
		<taglib>
			<taglib-uri>/tags/jstl-ltag</taglib-uri>
			<taglib-location>/WEB-INF/tld/taglib.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>/tags/struts-tiles</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-tiles.tld</taglib-location>
		</taglib>
		
		<taglib>
			<taglib-uri>/tags/struts-html</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-html.tld</taglib-location>
		</taglib>
		
		<taglib>
			<taglib-uri>/tags/struts-logic</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-logic.tld</taglib-location>
		</taglib>
		
		<taglib>
			<taglib-uri>/tags/struts-bean</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-bean.tld</taglib-location>
		</taglib>
		
		<taglib>
			<taglib-uri>/tags/struts-nested</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-nested.tld</taglib-location>
		</taglib>
		
		<!--
		<jsp-property-group>
			<page-encoding>
				<page-encoding>utf-8</page-encoding>
			</page-encoding>
		</jsp-property-group>
		-->
		
	</jsp-config>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<error-page> 
		<error-code>404</error-code> 
		<location>/404.jsp</location> 
	</error-page>
	
</web-app>